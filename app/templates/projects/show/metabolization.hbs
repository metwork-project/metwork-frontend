{{#if model.runFinish}}
<div class="d-flex">
  <div class="mr-auto">
    <h4 class="d-inline">
      Metabolization Network
    </h4>
  </div>

  <div>
    {{#bs-button type="info"
          class="m-1"

          onClick=(action 'toggleDisplayNodeName') }}
    Display
    {{#if (eq displayNodeName 'parent_mass')}}
    cosines
    {{else}}
    mass
    {{/if}}
    {{/bs-button}}
    {{#bs-button type="secondary"
          class="m-1"
          onClick=(action 'reloadMetabolizationNetwork') }}
    {{svg-jar "sync" class="octicon"}}
    {{/bs-button}}
    {{#bs-button type="warning"
          class="m-1"
          onClick=(action 'downloadSVG') }}
    {{svg-jar "cloud-download" class="octicon"}} .svg
    {{/bs-button}}
  </div>
</div>
<div class="row graph {{if isGraphFullScreen "graph-full-screen"}}">
  <div class="col-md-8 graph-content">
    {{graph-loader
      spinnerStatus=spinnerStatus
      loadNetwork=(action 'reloadMetabolizationNetwork')
      class="h-100"}}
    {{GraphFitFullScreen}}
    {{#bs-button type="light" class="full-screen-button" onClick=(action (mut isGraphFullScreen) (not isGraphFullScreen))}}
    {{svg-jar "screen-full" class="octicon"}}
    {{/bs-button}}
    <div id="cy"></div>
  </div>
  <div class="col-md-4">
    {{metabo-graph-node
      project=model
      nodeData=nodeData
      reloadMetabolizationNetwork=(action "reloadMetabolizationNetwork")}}
  </div>

</div>
{{/if}}

{{WatchAddItems}}

{{reaction-manager 
  model=reactions
  store=store
  modelName="reactions"
  initReactionIds=model.reaction_ids 
  updatedReactionIds=updatedReactionIds 
  hasChanges=hasChanges
  projectView=true
  updateDataPage=(route-action 'updateDataPage')
  triggerAddItems=triggerAddItems
  newItem=(route-action 'newItem')
  status=status
  text=text
  my=my
  user=user
  project_id=model.id
  selected=selected}}


