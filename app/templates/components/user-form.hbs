{{#bs-form
  formLayout='horizontal'
  onSubmit=(action 'submitAction')
  novalidate=true
  model=model
  as |form|}}

  {{#each getFields as |f|}}

    {{form.element
      controlType=f.controlType
      label=f.label
      placeholder=f.placeholder
      property=f.property
      value=f.value}}

  {{/each}}

  {{#if needCertifyCheck}}
    <div class="row">
      <div class="col-md-1">
        {{input type="checkbox" name="certifyCheck" checked=certifyCheck}}
      </div>
      <div class="col-md-11">
            I certify that I will use MetWork for non-commercial activity either directly
            or as a means of promoting or soliciting business
      </div>
    </div>
  {{/if}}

  <div class="d-flex justify-content-between">

    <div>
      {{bs-button
        defaultText=submitText
        type="submit"
        buttonType="submit"
        class=buttonClass}}
    </div>

    <div>
      {{yield}}
    </div>

  </div>
{{/bs-form}}
{{#if error }}
  <div class="alert alert-danger m-2" role="alert">
    {{error}}
  </div>
{{/if}}
