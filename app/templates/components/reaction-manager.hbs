<div class="row">


  <div class="card col-lg-10">
    <div class="card-body">
      <div class="d-flex">
        <div class="mr-auto">
          <h3 class="d-inline">
            Reactions
          </h3>
          {{#if updatedReactionIds}}
          <span>
            ({{selectedCount}} selected)
          </span>
          {{/if}}
        </div>
        <div>
          {{#if hasChanges}}
          <button type="button" class="btn btn-primary" {{action "addItems"}}>
            {{svg-jar "plus" class="octicon"}} Save changes
          </button>
          {{/if}}
          <button type="button" class="btn btn-success" {{action "createItem" "reaction" model}}>
            {{svg-jar "plus" class="octicon"}} New reaction
          </button>
        </div>
      </div>

      {{reaction-list 
        model=model 
        class="card-text" 
        updatedReactionIds=updatedReactionIds 
        triggerSelected=triggerSelected
        hasChanges=hasChanges}}

    </div>
  </div>

  <div class="col-lg-2">
    {{WatchUpdateFilter}}
    {{reaction-index-menu 
      status=status 
      text=text 
      my=my 
      user=user
      selected=selected
      TriggerUpdateFilter=TriggerUpdateFilter
      updatedReactionIds=updatedReactionIds}}

  </div>

</div>
{{delete-modal title="Delete reaction" dataToDelete=dataToDelete dataLabel=model.dataLabel
updateDataController='updateDataController'}}