<div class="card">
    <div class="card-body">

        <h4>Filter</h4>

        <form>
            <h5>Status</h5>
            {{#each reactionStatus as |status| }}

            <div class="checkbox">
                <label>
                    {{input type="checkbox" checked=status.checked }}
                    <span class="badge badge-{{status.class}}" style="vertical-align:top">
                        {{status.libelle}}
                    </span>

                </label>
            </div>
            {{/each}}
            <h5>Text</h5>
            <label>
                {{input value=inputText class='form-control'}}
            </label>
            <h5>User</h5>
            <div class="checkbox">
                <label>
                    {{input type="checkbox" checked=inputMy }} My reactions
                </label>
            </div>
            <label>
                {{input value=inputUser class='form-control' disabled=inputMy}}
            </label>
            {{#bs-button type="primary" onClick=(action 'updateFilter')}}Apply{{/bs-button}}
        </form>

    </div>
</div>