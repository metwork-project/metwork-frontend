<div class="card">
    <div class="card-body">

        <h4>Filters</h4>

        <form>
            <h5>Status</h5>
            {{#each reactionStatus as |status| }}

            <div class="checkbox">
                <label>
                    {{input type="checkbox" checked=status.checked }} {{status.libelle}}
                </label>
            </div>
            {{/each}}
            <h5>Contains</h5>
            <label>
                {{input value=inputText class='form-control'}}
            </label>
            {{#bs-button type="primary" onClick=(action 'updateFilter')}}Apply{{/bs-button}}
        </form>

    </div>
</div>