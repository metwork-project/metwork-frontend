<div class="d-flex mb-3">
  <div class="mr-auto">
    <h2 class="d-inline">
      {{title}}
    </h2>
    {{#if updatedItemIds}}
      <span>
        (
        {{selectedCount}}
        selected )
      </span>
    {{/if}}
  </div>
  {{component
    listHeader
    dataLabel=dataLabel
    model=project
    projectView=projectView
    listSelectable=listSelectable
  }}
</div>
<div class="row">
  <div class="col-lg-10">
    <div>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-3">
        {{#each model as |item|}}
          {{items-list-item
            listItem=listItem
            item=item
            itemToEdit=itemToEdit
            updatedItemIds=updatedItemIds
            triggerSelected=triggerSelected
            hasChanges=hasChanges
            projectView=projectView
            itemHeader=itemHeader
            dataToDelete=dataToDelete
            listSelectable=listSelectable
          }}
        {{/each}}
      </div>
      {{pagination-handler data=model}}
    </div>
  </div>
  <div class="col-lg-2">
    {{yield}}
  </div>
</div>